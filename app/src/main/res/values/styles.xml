<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextoHome">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/azul_esverdeado</item>
    </style>

    <style name="LabelTelaPesagem">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputTelaPesagem">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OpcoesRadioGroupPesagem">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BotaoSalvar">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/btn_save</item>
        <item name="android:paddingLeft">@dimen/save_button_padding_left</item>
        <item name="android:paddingRight">@dimen/save_button_padding_right</item>
        <item name="android:paddingBottom">@dimen/save_button_padding_bottom</item>
        <item name="android:paddingTop">@dimen/save_button_padding_top</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">@dimen/save_button_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/save_button_margin_bottom</item>
        <item name="android:background">@drawable/riple_effect_botao_azul</item>
    </style>

    <style name="TextTitle" >
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/preto</item>
    </style>

    <style name="TextSubtitle" >
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/preto</item>
    </style>

    <style name="TextContent" >
        <item name="android:textSize">15sp</item>
        <item name="android:color">@color/preto</item>
    </style>

</resources>
